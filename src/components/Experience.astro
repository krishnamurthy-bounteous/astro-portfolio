---
import { Icon } from "astro-icon/components";
---

<section
  class="bg max-w-[100vw] h-[100vh] flex justify-between items-center relative flex-wrap"
>
  <div class="flex flex-1 justify-center">
    <h2
      class="text-white font-mono text-4xl"
      data-aos="fade-left"
      data-aos-delay="100"
    >
      Experience
    </h2>
  </div>
  <div
    class="flex-1
      text-white
      font-mono
      flex
      justify-center
      min-w-[340px]"
  >
    <div class="flex flex-col gap-8">
      <img
        data-aos="fade-left"
        data-aos-delay="100"
        src="images/bxa.png"
        class="w-80"
      />
      <div class="flex gap-2 flex-col">
        <p data-aos="fade-left" data-aos-delay="250">Feb 2024 - Jun 2024</p>
        <h2 data-aos="fade-left" data-aos-delay="300" class="font-bold">
          Software Intern
        </h2>
        <div
          data-aos="fade-left"
          data-aos-delay="350"
          class="w-0.5 h-6 bg-white ml-20"
        >
        </div>
        <p data-aos="fade-left" data-aos-delay="400">Jul 2024 - Now</p>
        <h2 data-aos="fade-left" data-aos-delay="450" class="font-bold">
          Software Analyst
        </h2>
      </div>
    </div>
  </div>

  <style>
    .bg {
      background: conic-gradient(#147e72, #1f1f1f);
    }

    @media (max-width: 767px) {
      .bg {
        background: conic-gradient(from 270deg, #147e72, #1f1f1f);
      }
    }

    img {
      height: 30px;
    }
  </style>
</section>
